@model StudentData.Models.StudentLogin

@{
    ViewData["Title"] = "logindesign";
}

<div class="display-3" align="center">LOGIN</div>
<br />
<div class="text-center">
    <div class="home-body">
        @using (Html.BeginForm("logindesign", "Login", FormMethod.Post))
        {
            if (ViewBag.LoginStatus != null)
            {
                if (ViewBag.LoginStatus == 0)
                {
                    <div class=""></div>
                   
                }
            }
            
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Email</span>
                </div>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "username" })
            </div>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Password</span>
                </div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "password" })
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn float-right login_btn" />
            </div>
        }
    </div>
</div>