@{
}
@model List<url>

<div class="display-2">HEY WELCOME BACK !!! </div>
<br />

<h1>@ViewData["Name"]</h1>
<br />

<h4>Id: @ViewData["Id"]</h4>

<h4>Email: @ViewData["Email"]</h4>
<br />
<br />
<div>To Update Personal Details Click Update Profile</div>
<a asp-controller="Login" asp-action="ChangeProfile" class="btn btn-primary" align="center">UPDATE PROFILE</a>

<br />
<br />
<div>To Add Your Urls Click on Add URL</div>
<a asp-controller="urlc" asp-action="Add" class="btn btn-primary">Add URL</a>
<table class="table table-bordered table-striped">
    <thread>
        <th>
            YOUR URL TO VARIOUS SITE
        </th>
        <tr>
            <th>
                ID
            </th>
            <th>Contact Name</th>
            <th>Contact URL</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name_Of_Url      </td>
                <td>@obj.Url</td>
                <td><a asp-controller="urlc" asp-action="Edit" asp-route-id="@obj.Id">EDIT</a></td>
                <td><a asp-controller="urlc" asp-action="Delete" asp-route-id="@obj.Id">DELETE</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="urlc" asp-action="LogOut" class="btn btn-primary">LOG OUT</a>